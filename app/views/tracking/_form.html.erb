<%= simple_form_for @tracker,url: search_tracking_path, remote: true ,class: "form-horizontal" do |f| %>
    <fieldset>

      <!-- Form Name -->
      <legend>Track your package</legend>

      <!-- Text input-->
      <%= f.input :tracking_number, placeholder: "Tracking number", class: "input-xlarge" %>

      <!-- Button -->
      <div class="control-group">
        <label class="control-label" for="singlebutton"></label>
        <div class="controls">
          <button id="singlebutton" name="singlebutton" class="btn btn-primary">Search</button>
        </div>
      </div>

    </fieldset>
<% end %>

<h3>Tracking Id: <%= tracking_information.tracking_number %></h3>


<div class="table-responsive table-striped table-hover">
  <table class="table">
    <% tracking_information.details.each do |key, value| %>
        <% if value.is_a?(String) %>
            <tr>
              <td>
                <b><%= key.to_s.titleize %></b>
              </td>
              <td>
                <%= value.titleize %>
              </td>
            </tr>
        <% end %>
    <% end %>
  </table>
</div>


<br/>

<%= link_to new_tracking_path, remote: true, class: "btn btn-sm btn-info" do %>
    <span class="glyphicon glyphicon-circle-arrow-left"></span> Back To Search
<% end %>

<script>
    $(function(){
        $("#trackerModal").modal("hide");
    });
</script>